<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
<!-- 
  <settings>
    <setting name="useGeneratedKeys" value="false"/>
    <setting name="useColumnLabel" value="true"/>
  </settings>

  <typeAliases>
    <typeAlias alias="UserAlias" type="org.apache.ibatis.submitted.complex_property.User"/>
  </typeAliases> -->

  <properties resource="system-config.properties"/>


  <typeHandlers>
    <typeHandler handler="com.erp.handler.DelColumnTypeHandler" javaType="java.lang.Boolean" jdbcType="CHAR"/>
    <typeHandler handler="com.erp.handler.LastLoginTimeTypeHandler" javaType="java.util.Date" jdbcType="TIME"/>
  </typeHandlers>

  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC">
        <property name="" value=""/>
      </transactionManager>
      <dataSource type="UNPOOLED">
        <property name="driver" value="${driver.classname}"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>

  <mappers>
    <mapper resource="com/erp/config/TableNames.xml"/>
    <mapper resource="com/erp/config/Style.xml"/>
    <mapper resource="com/erp/config/Project.xml"/>
    <mapper resource="com/erp/config/StaffInfo.xml"/>
    <mapper resource="com/erp/config/Permission.xml"/>
    <mapper resource="com/erp/config/RolePermission.xml"/>
    <mapper resource="com/erp/config/Role.xml"/>
    <mapper resource="com/erp/config/Group.xml"/>
    <mapper resource="com/erp/config/Jldw.xml"/>
    <mapper resource="com/erp/config/Wl.xml"/>
    <mapper resource="com/erp/config/Gys.xml"/>
    <mapper resource="com/erp/config/Module.xml"/>
    <mapper resource="com/erp/config/Yw.xml"/>
    <mapper resource="com/erp/config/SerialNumber.xml"/>
    <mapper resource="com/erp/config/Product.xml"/>
    <mapper resource="com/erp/config/FileUploadLog.xml"/>
    <mapper resource="com/erp/config/Yj.xml"/>
  </mappers>

</configuration>